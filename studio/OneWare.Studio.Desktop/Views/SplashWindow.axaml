<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:OneWare.Studio.Desktop.ViewModels"
        SystemDecorations="None"
        CanResize="False" Width="540" Height="304"
        mc:Ignorable="d" ClipToBounds="False"
        WindowStartupLocation="CenterScreen"
        x:Class="OneWare.Studio.Desktop.Views.SplashWindow"
        Title="SplashScreen" x:DataType="viewModels:SplashWindowViewModel">
    <Border BoxShadow="5 5 10 0 DarkGray">
        <Image Width="540" Height="304" Source="{Binding SplashScreen}" />
    </Border>
</Window>